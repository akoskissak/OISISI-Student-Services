<Window x:Class="GUI.View.ProfessorsForDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.View"
        mc:Ignorable="d"
        Title="ProfessorsForDepartment" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Button Content="Set department chief" Click="SetChief_Click" Grid.Row="0" HorizontalAlignment="Left" Margin="5,10,0,10"/>
        <DataGrid x:Name="ProfessorsForDepartmentDataGrid" Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding ProfessorDtos, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding SelectedProfessor, UpdateSourceTrigger=PropertyChanged}"
                  SelectionChanged="ProfessorsForDepartmentDataGrid_SelectionChanged"
                  SelectionMode="Single" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="LastName" Binding="{Binding Lastname}"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="YearsOfService" Binding="{Binding YearsOfService}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
